<?xml version="1.0" encoding="utf-8"?>
<package xmlns="http://schemas.microsoft.com/packaging/2010/07/nuspec.xsd">
  <metadata>
    <id>Tvl.VisualStudio.Text.Utility</id>
    <version>0.0.0</version>
    <authors>Sam Harwell</authors>
    <licenseUrl>https://raw.github.com/tunnelvisionlabs/vsbase/master/LICENSE</licenseUrl>
    <requireLicenseAcceptance>true</requireLicenseAcceptance>
    <description>
      The Text Editor Utility Library provides helper classes for Visual Studio Extensions written in managed code that interact with the text editor.

      This assembly should be included in the VSIX package for your extension (this is the default behavior when you reference the package).
    </description>
    <summary>Visual Studio text utility library</summary>
    <tags>vs2010 vs2012 vs2013</tags>
    <dependencies>
      <!-- Visual Studio 2010 -->
      <dependency id="VSSDK.IDE.10" version="[10.0.2,11.0.0)"/>
      <!--
      Exposed Dependencies (Tvl.VisualStudio.Text.Utility.dll):
        Microsoft.VisualStudio.OLE.Interop
        Microsoft.VisualStudio.TextManager.Interop
        Microsoft.VisualStudio.Text.Data
        Microsoft.VisualStudio.Text.Logic
        Microsoft.VisualStudio.Text.UI
        Tvl.VisualStudio.Commenter.Interfaces
      -->
      <dependency id="VSSDK.OLE.Interop" version="[7.0.2,8.0.0)"/>
      <dependency id="VSSDK.TextManager.Interop" version="[7.0.2,8.0.0)"/>
      <dependency id="VSSDK.Text.10" version="[10.0.2,11.0.0)"/>
      <dependency id="Tvl.VisualStudio.Commenter.Interfaces" version="[1.0.0,1.1.0)"/>
    </dependencies>
    <references>
      <reference file="Tvl.VisualStudio.Text.Utility.dll"/>
    </references>
  </metadata>
  <files>
    <!-- Assemblies -->
    <file src="bin\$Configuration$\Tvl.VisualStudio.Text.Utility.dll" target="lib\net40"/>
    <file src="bin\$Configuration$\Tvl.VisualStudio.Text.Utility.pdb" target="lib\net40"/>
    <file src="bin\$Configuration$\Tvl.VisualStudio.Text.Utility.xml" target="lib\net40"/>

    <!-- Code Contracts assemblies -->
    <file src="bin\$Configuration$\CodeContracts\Tvl.VisualStudio.Text.Utility.Contracts.dll" target="lib\net40"/>
    <file src="bin\$Configuration$\CodeContracts\Tvl.VisualStudio.Text.Utility.Contracts.pdb" target="lib\net40"/>

    <!-- Source Code -->
    <file src="**\*.cs" exclude="obj\**\*.cs" target="src"/>
  </files>
</package>
